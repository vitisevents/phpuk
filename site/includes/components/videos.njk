<section class="py-24 container px-4 mx-auto h-full bg-white">
	<div class="px-4 mb-8 flex items-center">
		<div>
			<i class="inline-block font-mono text-blue-400 mb-4 lowercase">&#60; video_archive &#47;&#62;</i>
			<h2 class="text-4xl capitalize">Videos from previous conferences</h2>
			<p class="text-sm font-mono text-gray-700 max-w-3xl">PHP UK Conference 2019 was another great success! A huge thanks to all our delegates for attending and leaving feedback, thanks to all our speakers for delivering non-stop fantastic talks, and thanks to all our sponsors who made the event possible.</p>
		</div>
		<div class="flex-grow text-right">
			<a href="/videos" class="inline-block text-sm uppercase tracking-widest rounded-full py-3 px-6 text-white font-semibold bg-gray-600 hover:bg-white hover:text-gray-600">View all Videos</a>
		</div>
	</div>
	<div class="flex">
		{% for video in collections.featured | reverse %}
			{% if loop.index0 < 3 %}
				<a class="block hover:text-blue-500" href="{{ video.url }}">
					<article class="video-card px-4">
						<div class="relative">
							<img src="https://img.youtube.com/vi/{{ video.data.video_id }}/maxresdefault.jpg" alt="{{ video.data.title }}" class="video-card-thumb block rounded-sm">
							<span class="video-card-play absolute">
								{% include "components/play-button.njk" %}
							</span>
						</div>
						<div class="mt-4">
							<i class="inline-block font-mono text-gray-400 mb-4 capitalize text-sm">&#60; {{video.data.speaker}} &#47;&#62;</i>
							<h2 class="text-2xl capitalize mb-0">
								{{ video.data.title }}
							</h2>
						</div>
					</article>
				</a>
			{% endif %}
		{% endfor %}
	</div>
</section>