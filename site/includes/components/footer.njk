<div class="footer-wrapper">
  <footer id="footer" class="footer bg-blue-500" role="contentinfo">
    <section class="container px-8 py-4 mx-auto flex flex-col lg:flex-row">
      <div class="flex-1">
        <ul class="md:flex items-center mb-2">
          <li class="mb-4 md:mr-5 md:mb-0">
            <span class="link text-sm tracking-wider text-white font-semibold hover:text-white uppercase">About</span>
          </li>
          {% for item in navigation.footer %}
            <li class="mb-4 md:mr-5 md:mb-0">
              <a href="{{ item.url | safe }}" class="link text-sm tracking-wide text-blue-200 hover:text-white"{% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.label }}
              </a>
            </li>
          {% endfor %}
        </ul>
        <ul class="md:flex">
          <li class="mb-4 md:mr-5 md:mb-0">
