<section class="py-24 bg-black bg-cover bg-center" role="banner" style="background-image: url(/images/sponsors-hero.jpg);">
  <div class="container mx-auto px-8">
    <article class="bg-black p-8 pb-10 shadow-lg rounded-lg max-w-lg">
      <i class="inline-block font-mono text-blue-500 mb-2 lowercase">&#60; testimonials &#47;&#62;</i>
      <h3 class="text-2xl md:text-3xl text-white mb-4">From our sponsors</h3>
      <div class="testimonials-slider">
        {% for testimonial in testimonials.testimonials %}
        <blockquote>
          <p class="text-gray-200 text-xl italic">"{{testimonial}}"</p>
        </blockquote>
        {% endfor %}
      </div>
    </article>
  </div>
</section>