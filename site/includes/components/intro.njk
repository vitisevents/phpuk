<section class="px-8 py-24 container mx-auto h-full">
	<div class="flex flex-col-reverse lg:flex-row">
		<div class="lg:pr-16 mt-8 lg:mt-0 lg:w-1/3">
			<i class="inline-block font-mono text-blue-400 mb-4 lowercase">&#60; Introduction &#47;&#62;</i>
			<h2 class="text-3xl">{{site.intro.title}}</h2>
			{% for paragraph in site.intro.content %}
				<p class="text-gray-600 text-xl mb-4">{{paragraph}}</p>
			{% endfor %}
			<a class="inline-block text-blue-500 px-8 py-3 bg-gray-200 hover:bg-blue-200 hover:text-blue-800" href="/photos">View All Photos</a>
		</div>
		<div class="lg:w-2/3">
			<div class="gallery-video pl-2">
				<div id="fb-root"></div>
				<script async="1" defer="1" crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&amp;version=v5.0"></script>
				<div class="overflow-hidden rounded-lg fb-video" data-href="{{site.intro.fb_video_url}}">
					<blockquote cite="{{site.intro.fb_video_url}}" class="fb-xfbml-parse-ignore">
					<a href="{{site.intro.fb_video_url}}">PHP UK Conference 2017</a>
					<p>PHP UK Conference 2017</p>Posted by <a href="https://www.facebook.com/ukconference/">PHP UK Conference</a> on Wednesday, March 29, 2017</blockquote>
				</div>
			</div>
		</div>
	</div>
	{% include 'components/photos.njk' %}
</section>