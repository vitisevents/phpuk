{# Google Schema #}
<meta itemprop="name" content="{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %} | {{ site.name }}">
<meta itemprop="description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ site.description }}{% endif %}">

{# Twitter #}
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %} | {{ site.name }}">
<meta name="twitter:description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ site.description }}{% endif %}">
<meta name="twitter:site" content="{{ site.author.handle }}">
<meta name="twitter:creator" content="{{ site.author.handle }}">
<meta name="twitter:image:src" content="{{ site.url | safe }}{{ site.images.twitter }}">

{# Open Graph #}
<meta name="og:title" content="{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %} | {{ site.name }}">
<meta name="og:description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ site.description }}{% endif %}">
<meta name="og:image" content="{{ site.url | safe }}{{ site.images.og }}">
<meta name="og:url" content="{{ site.url | safe }}{{ page.url | safe }}">
<meta name="og:site_name" content="{{ site.name }}">
<meta name="og:locale" content="en_GB">
<meta name="og:type" content="website">
