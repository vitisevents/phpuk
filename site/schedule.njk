---
layout: default
meta_title: Schedule
body_class: schedule
title: Schedule
---
<section class="relative py-24 pt-40 bg-black bg-cover bg-center" style="background-image: url({{site.schedule.hero}});">
  <div class="bg-blue-800 h-full w-full absolute top-0 left-0 opacity-25"></div>
  <div class="relative px-8 container mx-auto items-center">
    <i class="inline-block font-mono text-blue-500 mb-4 lowercase">&#60; conference_schedule &#47;&#62;</i>
    <h1 class="text-5xl mb-1 capitalize text-white">{{site.schedule.title}}</h1>
    <p class="text font-mono text-gray-200 max-w-3xl">{{site.schedule.description}}</p>
  </div>
</section>
<main class="main mx-auto px-8">
  {% for day in schedule.days %}
    <article class="my-12 md:my-24">
      <div class="container mx-auto">
        <i class="inline-block font-mono text-blue-400 mb-4 lowercase">&lt; Day_{{loop.index}} /&gt;</i>
        <h2 class="text-3xl">{{day.name}}</h2>
        <div class="markdown">{{day.description | safe}}</div>
      </div>
      <table class="schedule-wrapper w-full">
        {% for slot in day.slots %}
          {% if slot.slottype != 'mc' %}
            <tr class="slot">
              <td class="time text-gray-500 p-4 pl-0 font-mono w-24" rowspan="{% if slot.slottype == "talk"%}3{% else %}2{% endif %}">{{slot.time}}</td>
              {% for track in slot.tracks %}
                {% if track.track.location %}
                  <td class="location px-4{% if track.track.tooltip %} tutorial{% endif %} text-gray-600 text-sm uppercase tracking-wider" colspan="{{track.track.colspan}}" title="{{track.track.tooltip}}">{{track.track.location}}</td>
                {% endif %}
              {% endfor %}
            </tr>
            <tr class="slot">
              {% for track in slot.tracks %}
                <td class="track p-4 {{slot.slottype}} {% if slot.slottype == 'break' %}bg-green-100 text-green-900{% else %}bg-blue-100 text-blue-900{% endif %} border-8 border-white" id="{{track.track.id}}" colspan="{{track.track.colspan}}" rowspan="{{track.track.rowspan}}">
                  <div class="track-slot-meta">
                    <span class="location opacity-50 text-sm">{{track.track.location}}</span>
                    <span class="track-name opacity-50 text-sm">{{track.track.name}}</span>
                    {% if track.track.prereqs %}
                      <a href="prereqs/">Prerequisites</a><br>
                    {% endif %}
                    <span class="title">
                      <h3 class="main-title text-2xl mb-1 font-normal">{{track.track.title}}</h3>
                      <span class="subtitle">{{track.track.subtitle}}</span>
                    </span>
                    {% if track.track.speaker %}
                      <span class="speaker-name inline-block mb-6 font-medium">
                        Speaker:
                        <a href="/speakers/#{{speaker.slug}}">{{track.track.speaker}}</a>
                      </span>
                    {% elseif track.track.speakers %}
                      <span class="speaker-name inline-block mb-6 font-medium">
                        {% for speaker in track.track.speakers %}
                          <a href="/speakers/#{{speaker.slug}}">{{speaker.speaker}}</a>
                          {% if speaker != track.track.speakers.last %}&amp; {% endif %}
                        {% endfor %}
                      </span>
                    {% endif %}
                    {% if track.track.level %}
                      <span class="level">Level: {{track.track.level}}</span>
                    {% endif %}
                  </div>
                  {% if slot.slottype == "talks" %}
                    <div>
                      <p class="toggle-schedule-section max-w-sm">
                        {{track.track.description | truncate(80)}}
                        <span class="toggle-schedule-info text-blue-500 hover:text-blue-900 block mt-2 text-sm cursor-pointer">See More</span>
                      </p>
                      <div class="toggle-schedule-section hidden max-w-sm">
                        {{track.track.description | safe}}
                        <span class="toggle-schedule-info text-blue-500 hover:text-blue-900 block mt-2 text-sm cursor-pointer">See Less</span>
                      </div>
                    </div>
                  {% else %}
                    <p class="description">
                        {{track.track.description | safe}}
                    </p>
                  {% endif %}
                  {% if track.track.menulink %}
                    <p><a href="/menu/#{{track.track.menulink}}">Tasty food menu &raquo;</a></p>
                  {% endif %}
                  {# {% if track.track.video %}
                    <span class="video"><a href="https://www.youtube.com/watch?v={{track.track.video}}&list={{site.data.2020.playlist}}">Video &raquo;</a></span>
                  {% endif %} #}
                </td>
              {% endfor %}
            </tr>
          {% endif %}
        {% endfor %}
      </table>
    </article>
  {% endfor %}
</main>
